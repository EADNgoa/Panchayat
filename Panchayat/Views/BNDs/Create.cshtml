                @Html.ValidationMessageFor(model => model.GrandFather, "", new { @class = "text-danger" })
            </div>
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Grand Mother</label>
            }
            else
            {
                <label class="control-label col-md-2">UID No Of husband/Wife</label>
            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.GrandMother, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GrandMother, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @if (ViewBag.RegisterTypeID == 39)
            {
