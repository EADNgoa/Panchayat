                @Html.ValidationMessageFor(model => model.NameOfDistrict, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-md-2"> Name of State</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.NameOfState, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameOfState, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Religion Family</label>
            <div class="col-md-4">
                @Html.DropDownList("ReligionOfFamily", new List<SelectListItem>
                {
                  new SelectListItem { Text = "Other", Value = "Other" },
                  new SelectListItem { Text = "Hindu", Value = "Hindu" },
                  new SelectListItem { Text = "Muslim", Value = "Muslim" },
                  new SelectListItem { Text = "Christian", Value = "Christian" }
                },
              htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ReligionOfFamily, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-md-2">Any Other Religion?</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.AnyOtherReligion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnyOtherReligion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Father's Education</label>
            }
            else
            {
                <label class="control-label col-md-2">Occupation of the Deceased</label>
            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.FEduc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FEduc, "", new { @class = "text-danger" })
            </div>

            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Mother's Education</label>
            }
            else
            {
                <label class="control-label col-md-2">Was the Cause of Death medically Certified?(Yes Or No)</label>
            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.MEduc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MEduc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Father's Occupation</label>
            }
            else
            {
                <label class="control-label col-md-2">Name Of Disease Or Actual Cause Of Death</label>
            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.FOccup, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FOccup, "", new { @class = "text-danger" })
            </div>
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Mothers Occupation</label>
            }
            else
            {
                <label class="control-label col-md-2">if Female,was death occured during pregnancy(Yes Or no)</label>
            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.MOccup, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MOccup, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Age Of Mother's Maraige</label>
            }
            else
            {
                <label class="control-label col-md-2">If Used to habitually smokes for how many years(e.g 1,2,3)</label>

            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.AgeOfMotherMarraige, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InformantsName, "", new { @class = "text-danger" })
            </div>
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Age Of Mother At The time Of Child Birth</label>
            }
            else
            {
