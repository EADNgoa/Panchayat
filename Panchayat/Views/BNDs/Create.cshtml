            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.NameOfTown, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameOfTown, "", new { @class = "text-danger" })
            </div>

