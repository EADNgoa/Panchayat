            </div>
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Permanant Address </label>
            }
            else
            {
                <label class="control-label col-md-2">Permanant Address Of Deceased</label>
            }
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.PermAddress, 3, 43, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PermAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
