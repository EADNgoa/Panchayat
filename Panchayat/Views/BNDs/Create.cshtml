                <label class="control-label col-md-2">Duration Of Pregnancy</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.DurationOfPregnancy, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DurationOfPregnancy, "", new { @class = "text-danger" })
                </div>            }


        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Name Of Mother</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.NameOfMother, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameOfMother, "", new { @class = "text-danger" })
            </div>

