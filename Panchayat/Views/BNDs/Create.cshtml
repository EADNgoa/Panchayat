                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">Date Of Birth</label>
