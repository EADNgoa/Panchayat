                @Html.ValidationMessageFor(model => model.AgeOfMotherBirth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @if (ViewBag.RegisterTypeID == 39)
            {
                <label class="control-label col-md-2">No Of Child(Including new born baby)</label>
            }
            else
            {
                <label class="control-label col-md-2">If Used habitually drink alcohol for how many years(e.g 1,2,3)</label>

            }
            <div class="col-md-4">
                @Html.EditorFor(model => model.NoOfChild, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoOfChild, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-md-2">Attention Type</label>
            <div class="col-md-4">
                @if (ViewBag.RegisterTypeID == 39)
                {
                    @Html.DropDownList("AttentionType",
                new List<SelectListItem>
                {
                   new SelectListItem { Text = "Institutional-Goverment", Value = "Institutional-Goverment" },
                   new SelectListItem { Text = "Institutional Private Or Non-Goverment", Value = "Institutional Private Or Non-Goverment" },
                   new SelectListItem { Text = "Doctor,Nurse or trained midwife", Value = "Doctor,Nurse or trained midwife" },
                   new SelectListItem { Text = "Traditional Birth Attendant", Value = "Traditional Birth Attendant" },
                   new SelectListItem { Text = "Relatives Or Others", Value = "Relatives Or Others" }
                },
                htmlAttributes: new { @class = "form-control" })
                }
                else
                {
                    @Html.DropDownList("AttentionType",
                new List<SelectListItem>
                {
                   new SelectListItem { Text = "Institutional", Value = "Institutional" },
                   new SelectListItem { Text = "Medical attention other than institution", Value = "Medical attention other than institution" },
                   new SelectListItem { Text = "No medical Attention", Value = "No medical Attention" },
                },
                htmlAttributes: new { @class = "form-control" })                }

                @Html.ValidationMessageFor(model => model.ReligionOfFamily, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (ViewBag.RegisterTypeID == 39)
        {
            <div class="form-group">
                <label class="control-label col-md-2">Delivery Method</label>
