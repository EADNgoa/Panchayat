@model IEnumerable<Panchayat.Holiday>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>Holidays</h2>

</center>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Holiday Date
        </th>
        <th>
            Holiday Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HolidayName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HolidayID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HolidayID })
        </td>
    </tr>
}

</table>
