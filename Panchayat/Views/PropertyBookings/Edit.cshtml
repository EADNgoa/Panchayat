                @Html.ValidationMessageFor(model => model.FullPayReceiptNo, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.FullPayAmount, "Full Pay Amount", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullPayAmount, new { htmlAttributes = new { @class = "form-control" } })
                <span>NOTE: If an entry is made here a Receipt will be generated for the Full Pay Amount.</span>
                @Html.ValidationMessageFor(model => model.FullPayAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.LuxTaxReceiptNo, "Lux. Tax Receipt No.", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.LuxTaxReceiptNo)
                @Html.ValidationMessageFor(model => model.LuxTaxReceiptNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RefundSDVoucherNo, "Refund SD Voucher No.", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.RefundSDVoucherNo)
                @Html.ValidationMessageFor(model => model.RefundSDVoucherNo, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentOfLuxTax, "Payment Of Lux. Tax", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentOfLuxTax, new { htmlAttributes = new { @class = "form-control" } })
                <span>NOTE: If an entry is made here a Receipt will be generated for the Lux. Tax paid</span>
                @Html.ValidationMessageFor(model => model.PaymentOfLuxTax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
