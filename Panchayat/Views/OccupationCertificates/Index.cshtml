          Ref No
        </th>
        <th>
           Ref Date
        </th>
        <th>
            Health Service Ref
        </th>
        <th>
            Health Service Ref Date
        </th>
    
      
        <th>
            @Html.DisplayNameFor(model => model.WEBstatu.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeetingDated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConstLicNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConstLicDate)


        </td>
