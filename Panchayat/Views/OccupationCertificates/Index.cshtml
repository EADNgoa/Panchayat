            @Html.DisplayFor(modelItem => item.RefDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HSref)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HSrefdate)
        </td>
   
      
        <td>
            @Html.DisplayFor(modelItem => item.WEBstatu.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OccupationCertificateID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OccupationCertificateID }) |
        </td>
