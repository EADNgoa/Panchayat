    @if (ViewBag.RegisterTypeID == 17)
    {
        @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, rt = 17 }))
    }
    @if (ViewBag.RegisterTypeID == 18)
