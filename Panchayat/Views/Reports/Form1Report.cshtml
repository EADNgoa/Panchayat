@model IEnumerable<Form1>
    @{      
        ViewBag.Title = String.Format("General Ledger - Abstract Ledger ");
    }
    <style type="text/css">
        table {
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-footer-group
        }
    </style>
    <header class="section-to-print">
        <h1 class="text-center"><b>FORM NO. 1</b></h1>
        <h5 class="text-center">[See Rule 20(i)]</h5>
        <h3 class="text-center"><B>@ViewBag.Title</B></h3>
        <h4 class="text-center">@ViewBag.RptFor</h4>
        
        @if (ViewBag.IsIncome=="Receipt")
        {
            <p>Receipt: YES</p>
            <p>Expenditure:</p>
        }
        else
        {
            <p>Receipt: </p>
            <p>Expenditure: YES</p>
        }
    </header>
    <input type="button" onclick="javascript:window.print();" value="Print" class="eabutton section-to-not-print" />
    <table class="table section-to-print">
        <thead>

            <tr>
                <th class="col-md-2">
                    Date
                </th>
                <th class="col-md-3">
                    Short Particulars
                </th>
                <th class="col-md-1">

                </th>
                <th class="col-md-3">
                    Amount
                </th>
                <th class="col-md-2">
                    C.B Folio
                </th>
                <th class="col-md-3">
                    Progressive
                </th>
                <th  class="col-md-2">
                    Total
                </th>
            </tr>
             
              
        </thead>
        <tbody>
            @{ decimal tot = 0; }
            @foreach (Panchayat.Form1 item in Model)
            {
            <tr>
                    <td class="col-md-2">@Html.DisplayFor(modelItem => item.EntryDate)</td>
                    <td class="col-md-3">@Html.DisplayFor(modelItem => item.Particulars)</td>
                    <td class="col-md-1"></td>
                    <td class="col-md-3">@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td class="col-md-2"></td>
                    <td class="col-md-3">@tot</td>
                    <td class="col-md-2">@(tot=tot+(decimal)item.Amount)</td>
            </tr>
            }
        </tbody>
    </table>
<hr />
<footer class="section-to-print">
    <div class="center-block">
    <p class="text-center">According to the classification of Minor item under Budget Heads</p>
</footer>

