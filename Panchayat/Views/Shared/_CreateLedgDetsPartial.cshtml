@model IEnumerable<Panchayat.LedgerDetail>

@{
    ViewBag.Title = "Create Demand Details";
}

<style>
    .form-contol {
        color: black;
    }
</style>

@if (Model.Count() > 0)
{ <h2>Details of this Ledger</h2> }
        
            @foreach (var LedDet in Model)
            {

                <div class="form-group">
                    <label class="control-label col-md-2">@LedDet.LedgerDetail1</label>
                    <div class="col-md-10">
                        <textarea rows="2" cols="50" id="data-@LedDet.LedgerDetailID" name="data-@LedDet.LedgerDetailID" class="form-contol" />
                    </div>
                </div>

            }
        
